<h1 align="center">Listing All Tags</h1>
<div align="center">
  <div align = "center"><%= will_paginate %></div>
  <% @tags.each do |tag| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
            <%= link_to "#{tag.name}", tag_path(tag) %>
          </li>
          <li><small><%= pluralize(tag.items.count, "item") %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <% if logged_in? && current_user.admin == true %>
    <%= link_to "new tag", new_tag_path %>
  <% end %>
  <div align = "center"><%= will_paginate %></div>
</div>