<div class="container">
  <%= link_to 'Add address', new_place_path, class: 'btn btn-primary btn-lg' %>

  <% if @places.count > 0 %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th colspan="3" class="page-header">
            <h2>My Addresses</h2>
          </th>
        </tr>
        <tr>
          <th>Address</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @places.each do |place| %>
          <tr>
            <td>
              <%= link_to place.address, place_path(place) %>
            </td>
            <td>
	            <%= link_to 'Delete', place_path(place), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %>
	          </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
		<div class = "row col-lg-12">
			<h2>You don't have any addresses yet!</h2>
		</div>
	<%end%>
</div>
