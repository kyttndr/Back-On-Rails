<%= form_with model: [@user, @user.profile], local: true do |form| %>
  <p>
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </p>

  <p>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </p>

  <p>
    <%= form.label :date_of_birth %>
    <%= form.date_field :date_of_birth %>
  </p>


  <p>
    <%= form.label :phone_number %>
    <%= form.phone_field :phone_number %>
  </p>

  <p>
    <%= image_tag(@profile.profile_picture_url) if @profile.profile_picture? %>
    <%= form.label :profile_picture %>
    <%= form.file_field :profile_picture %>
    <%= form.hidden_field :profile_picture_cache %>
  </p>

<%=form.submit "Save" %>
<% end %>