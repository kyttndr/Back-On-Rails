<h1>Edit profile</h1>
<%= form_with model: [@user, @user.profile], local: true do |form| %>
  <p>
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </p>

  <p>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </p>

  <p>
    <%= form.label :date_of_birth %>
    <%= form.date_field :date_of_birth %>
  </p>


  <p>
    <%= form.label :phone_number %>
    <%= form.phone_field :phone_number %>
  </p>

  <h3>Address:</h3>
  <p>
    <%= form.label :street_number %>
    <%= form.number_field :street_number %>

    <%= form.label :street_name %>
    <%= form.text_field :street_name %>
  </p>
  <p>
    <%= form.label :city %>
    <%= form.text_field :city %>

    <%= form.label :province %>
    <%= form.text_field :province %>

    <%= form.label :country %>
    <%= form.text_field :country %>
  </p>

  <%=form.submit "Save" %>
<% end %>