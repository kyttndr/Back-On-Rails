<div class = "center">
	<h1>MANAGE YOUR BORROWED ITEMS</h1>
	<div class = "">
		<div class="col-xs-6">
			<div>ITEMS YOU ARE CURRENTLY BORROWING</div>
			<table class="table text-left table-hover">
				<thead>
			   		<tr>
			      		<th class="col-xs-1">Item</th>
			      		<th class="col-xs-2">Description</th>
			      		<th class="col-xs-1">Owner</th>
			      		<th class="col-xs-1">Start Date</th>
						<th class="col-xs-1">End Date</th>
			    	</tr>
			  	</thead>
				<tbody>
					<% @current_borrow_transactions.each do |transaction|%>
				        <tr class="success">
							<td><%= link_to "#{transaction.item.name}", item_path(transaction.item) %></td>
				            <td><%= transaction.item.description %></td>
							<td><%= link_to "#{transaction.lender.username}", user_path(transaction.lender) %></td>
				            <td><%= transaction.start_date%></td>
				            <td><%= transaction.end_date%></td>
				        </tr>
				    <% end %>
			  	</tbody>
			</table>
		<!--</div>-->

		<!--<div class="col-xs-7">-->
			<div>ITEMS YOU WILL BORROW IN THE FUTURE</div>
			<table class="table text-left table-hover">
				<thead>
					<tr>
						<th class="col-xs-2">Item</th>
						<th class="col-xs-4">Description</th>
						<th class="col-xs-1.5">Owner</th>
						<th class="col-xs-1.5">Start Date</th>
						<th class="col-xs-1.5">End Date</th>
					</tr>
				</thead>
				<tbody>
					<% @future_borrow_transactions.each do |transaction|%>
				        <tr class="info">
							<td><%= link_to "#{transaction.item.name}", item_path(transaction.item) %></td>
				            <td><%= transaction.item.description %></td>
							<td><%= link_to "#{transaction.lender.username}", user_path(transaction.lender) %></td>
				            <td><%= transaction.start_date%></td>
				            <td><%= transaction.end_date%></td>
							<% params = {redirect: borrow_transactions_path} %>
							<td><%= link_to 'x', transaction_path(transaction, transaction: params), method: :delete, data: {confirm: "Are you sure you want to cancel this upcoming transaction?"} %></td>
				        </tr>
				    <% end %>
				</tbody>
			</table>
		</div>

		<div class="col-xs-6">
			<%= render 'calendar', list_transactions: [*@current_borrow_transactions, *@future_borrow_transactions], show: 'items' %>
		</div>
	</div>
	<div>
		<%=link_to 'home', root_path%>
	</div>
</div>
