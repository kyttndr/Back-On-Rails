<p>
    <%= month_calendar attribute: :start_date, end_attribute: :end_date, events: list_transactions do |date, transactions| %>
        <%= date.day %>

        <% transactions.each do |transaction| %>
            <div>
                <% if show == 'borrowers' %>
                    <%= transaction.borrower.username %>
                <% elsif show == 'borrowers&items' %>
                    <%= transaction.borrower.username %>: <%= transaction.item.name %>
                <% elsif show == 'items' %>
                    <%= transaction.item.name %>
                <% end %>
            </div>
        <% end %>

    <% end %>
</p>
