<p>
    <%= month_calendar attribute: :start_date, end_attribute: :end_date, events: list_transactions do |date, transactions| %>
        <div><b><%= date.day %></b></div>

        <div class="day_format">
            <input class="calendar_date" type="hidden" value="<%= date %>">
            <% transactions.each do |transaction| %>
                <div class="item_format">
                    <% if show == 'borrowers' %>
                        <%= transaction.borrower.username %>
                    <% elsif show == 'borrowers&items' %>
                        <%= transaction.item.name %>-<%= transaction.borrower.username %>
                    <% elsif show == 'items' %>
                        <%= transaction.item.name %>
                    <% end %>
                    <br>
                    <input class="transaction_id" type="hidden" value="<%=transaction.id%>">
                    <input class="item_id" type="hidden" value="<%=transaction.item.id%>">
                </div>
            <% end %>
        </div>
    <% end %>
</p>
