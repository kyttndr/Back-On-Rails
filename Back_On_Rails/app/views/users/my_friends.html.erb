<div class = "container">

<%= render 'friends/lookup' %>

<% if current_user.friendships.size > 0 %>
	<table class="table table-striped">
		<thead>
			<tr>
				<th colspan="3" class="page-header">
					<h2>My Friends</h2>
				</th>
			</tr>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% current_user.friends.each do |friend| %>
				<tr>
					<td><%= friend.username %></td>
					<td><%= friend.email %></td>
					<td> <%= link_to "Remove Friend", friendship_path(friend), method: :delete,
              			data: { confirm: "Are you sure?" }, class: "btn btn-xs btn-danger" %>
          			</td>
				</tr>
			<% end %>
		</tbody>
	<table>
<% else %>
	<div class = "row col-lg-12">
		<p>You don't have any friends yet!</p>
	</div>	
<%end%>
</div>